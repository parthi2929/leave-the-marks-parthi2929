<!DOCTYPE html>
<html>
    <head>
        <title>All Stories</title>
        <% include partials/head.ejs %>
    </head>
    <body>

        <!-- #wrapper ENSURE ALL CONTENT INSIDE THIS-->
        <div id="wrapper">                
            
                
            <% include partials/sidebar.ejs %>    

            <!-- Page Content -->
            <div id="page-content-wrapper">
                <div class="container-fluid">
                    <div class="row">
                        <div class="col-lg-12">
                            <p class="kaushanHead" align="center">All Stories</p>

                            <% if( typeof(storiesForEJS) !== 'undefined' ) {%> <!--Make sure first there are stories-->
                                <% for(var i = 0; i < storiesForEJS.length; i++) { %> <!--then iterate through them-->
                                    <h1><%- storiesForEJS[i].title %></h1>
                                    <h4>Created by <code> <%- storiesForEJS[i].author %></code></h4><br/><br/>
                                    <p><b>- Read the full story <a href="/allStories/<%- storiesForEJS[i].slug %>">here</a> </b></p>    
                                <% }%>
                            <% }%>

                            <br/><br/>
                        </div>
                    </div>
                </div>
            </div>
                
        </div>
        <!-- /#wrapper -->
        
        <% include partials/jsincludes.ejs %>          
    </body>
</html>